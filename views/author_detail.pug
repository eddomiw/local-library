extends layout

block content

  h1 Author: #{author.name}
  if !author.date_of_birth && !author.date_of_death
    |   (No Birth and Death Information)
  else if !author.date_of_birth
    |   (No Birth Information - #{author.date_of_death_formatted})
  else if !author.date_of_death
    |   (#{author.date_of_birth_formatted} - No Death Information)
  else
    |   (#{author.date_of_birth_formatted} - #{author.date_of_death_formatted})
  div(style='margin-left:20px;margin-top:20px')

    h4 Books
    if author_books.length
      dl
        each book in author_books
          dt
            a(href=book.url) #{book.title}
          dd #{book.summary}
    else
      p This author has no books.
